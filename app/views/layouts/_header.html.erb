				<% end %>

			</div>

			<i class="fa custom-caret"></i>
		</a>
		<div class="dropdown-menu">
			<ul class="list-unstyled">
				<li class="divider">
					
				</li>
				
				<li>
				<a role="menuitem" tabindex="-1" href="../seguridad/login"><i class="fa fa-power-off"></i>Salir</a>
