<div class="row">
	<div class="col-xs-12">
		<section class="panel panel-featured panel-featured-danger animated fadeInRight">
		<div class="panel-body">
            <form class="form-horizontal">
            <div class="form-group">
                <label for="sel_distrito" class="col-sm-2 control-label">Distrito</label>
                <div class="col-sm-10">
                    <select id="sel_distrito" name="sel_distrito" class="form-control">
                        <%@distritos.each do |p| %>
                        <option value="<%=p.IdDistrito.to_s%>"><%=p.Nombre.to_s %></option>
                        <% end %>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="txt_ubicacion" class="col-sm-2 control-label">Ubicación</label>
                <div class="col-sm-10">
                <!--<input type="text" class="form-control" id="txt_ubicacion" placeholder="Ubicación">-->
                    <select id="sel_ubicacion" name="sel_ubicacion" class="form-control">
                        <option value="1">1er Piso</option>
                        <option value="2">Sótano 1</option>
                        <option value="3">Sótano 2</option>
                        <option value="4">Sótano 3</option>
                        <option value="5">Sótano 4</option>
                        <option value="6">Sótano 5</option>
                        <option value="7">Sótano 6</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="txt_precio_desde" class="col-sm-2 control-label">Precio Desde</label>
                <div class="col-sm-4">
                <input type="number" class="form-control" id="txt_precio_desde" placeholder="Precio Desde" min="0.00" max="25" value="0" required>
                </div>
                <label for="txt_precio_hasta" class="col-sm-2 control-label">Precio Hasta</label>
                <div class="col-sm-4">
                <input type="number" class="form-control" id="txt_precio_hasta" placeholder="Precio Hasta" min="0.00" max="25" value="25.00" required>
                </div>
            </div>
            <div class="form-group">
                <label for="txt_puntuacion" class="col-sm-2 control-label">Puntuación</label>
                <div class="col-sm-4">
                    <input type="number" class="form-control" id="txt_puntuacion" placeholder="Puntuación" min="0" max="5" value="5">
                </div>
                <div class="col-sm-2">
                  <div class="checkbox-custom checkbox-default" style="">
                    <input id="chck_puntos_todos" name="chck_puntos_todos" type="checkbox"/>
                    <label for="chck_puntos_todos">Todas Puntuaciones</label>
                  </div>
                </div>
                <div class="col-sm-4">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Buscar</button>
                </div>
            </div>
            </form>
            <br><br><br>
        </div>
        </section>
    </div>
</div>
<div class="row">

    <%@estacionamientos.each do |p| %>
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src=<%= image_url(p.Foto.to_s) %> height="54" alt="Porto Admin" />
                    <div class="caption">
                    <h3><%=p.Nombre.to_s %></h3>
                    <p><%=p.Direccion.to_s %>, <%=p.Dimensiones.to_s %> m2, S/ <%=p.PrecioPorHora.to_f %></p>
                    <p><a href="../estacionamiento/alquiler?id=<%=p.IdEstacionamiento.to_i %>" class="btn btn-default" role="button">Ver</a></p>
                    </div>
                </div>
            </div>
    <% end %>
</div>
<br>
<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="thumbnail">
            <img src=<%= image_url('publicidad001.jpg') %> height="54" alt="Porto Admin" />
        </div>
    </div>
</div>
