    <section class="body-sign">
      <div class="center-sign">
        <div class="panel panel-sign">
          <div class="panel-title-sign mt-xl text-right">
            <h2 class="title text-uppercase text-bold m-none" ><i class="fa fa-user mr-xs"></i>Alquiler</h2>
          </div>
          <div class="panel-body" >

<%= form_for :usuario, :url =>{:controller => "seguridad", :action => "login_post"} ,:method => :post,:html =>{ :class => "form-horizontal" , :id => "loginForm"} do |f|%>


              <div class="form-group mb-lg">
                <label>Usuario</label>
                <div class="input-group input-group-icon">
                  <input name="ccod_usu" id="ccod_usu"  type="text" 
                  class="form-control input-lg" required/>
                  <span class="input-group-addon">
                    <span class="icon icon-lg">
                      <i class="fa fa-user"></i>
                    </span>
                  </span>
                </div>
              </div>

              <div class="form-group mb-lg">
                <div class="clearfix">
                  <label class="pull-left">Contraseña</label>
                </div>
                <div class="input-group input-group-icon">
                  <input name="cpass_usu" id="cpass_usu" type="password" class="form-control input-lg" required/>
                  <span class="input-group-addon">
                    <span class="icon icon-lg">
                      <i class="fa fa-lock"></i>
                    </span>
                  </span>
                </div>
              </div>

              <div class="row">
                <div class="col-sm-8">
                  <div class="checkbox-custom checkbox-default">
                    <input id="RememberMe" name="rememberme" type="checkbox"/>
                    <label for="RememberMe">Recordarme</label>
                  </div>
                </div>
                <div class="col-sm-4 text-right">
                <button  class="btn btn-primary hidden-xs" id="btnAceptar" name="btnAceptar">Ingresar</button>
                <!-- <a  href="../estacionamiento/busqueda_cliente" class="btn btn-primary hidden-xs" id="btnAceptar" name="btnAceptar">Ingresar</a> -->
                  <button type="submit" class="btn btn-primary btn-block btn-lg visible-xs mt-lg"  id="btnAceptarMovil" name="btnAceptarMovil">Ingresar</button>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-8">
                  <div class="checkbox-custom checkbox-default">
                  <a href="/usuario/tipousuario" style="float: left !important" class="pull-right">No tienes cuenta?</a>
                  </div>
                </div>
                <div class="col-sm-4 text-right"></div>
              </div>
              <br/>
              
              <div class="pull-center">
              <div id="divMensajeInformacion" class="alert-custom">
                 <% if @resultado != nil %>
                  <div class="alert alert-danger" role="alert" style="height: auto!important;">
                  <i class="fa fa-warning"></i> Error: Lo sentimos, su nombre de usuario y/o clave son incorrectos. Por favor inténtelo de nuevo.
                  </div>
                 <% end %>
              </div>
              </div>

              <span class="mt-lg mb-lg line-thru text-center text-uppercase">
                <span>Warrior Team</span>
              </span>

              <p class="text-center"><b>Sistema de Alquiler</b></p>

            <% end %>

          </div>
        </div>

        <p class="text-center text-muted mt-md mb-md">&copy; UPC Copyright 2018. All Rights Reserved.</p>
      </div>
    </section>
    <!-- end: page -->